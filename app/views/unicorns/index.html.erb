<p id="notice"><%= notice %></p>

<h1>Unicorns</h1>

<table>
  <thead>
    <tr>
      <th>Age</th>
      <th>Color</th>
      <th>Superpower</th>
      <th>Theme song</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unicorns.each do |unicorn| %>
      <tr>
        <td><%= unicorn.age %></td>
        <td><%= unicorn.color %></td>
        <td><%= unicorn.superpower %></td>
        <td><%= unicorn.theme_song %></td>
        <td><%= link_to 'Show', unicorn %></td>
        <td><%= link_to 'Edit', edit_unicorn_path(unicorn) %></td>
        <td><%= link_to 'Destroy', unicorn, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Unicorn', new_unicorn_path %>
